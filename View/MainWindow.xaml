        <Label Grid.Row="5" Grid.Column="5" Content="Friday" Style="{StaticResource weekDayLabelStyle}"/>
        <Label Grid.Row="5" Grid.Column="6" Content="Saturday" Style="{StaticResource weekDayLabelStyle}"/>
        <Label Grid.Row="5" Grid.Column="7" Content="Sunday" Style="{StaticResource weekDayLabelStyle}"/>
        
        <!-- Left Panel -->
        <Label Grid.Row="1" Grid.Column="0" Content="xD" Style="{StaticResource weekLabelStyle}"/>
        <Label Grid.Row="2" Grid.Column="0" Content="xD" Style="{StaticResource weekLabelStyle}"/>
        <Label Grid.Row="3" Grid.Column="0" Content="xD" Style="{StaticResource weekLabelStyle}"/>
        <Label Grid.Row="4" Grid.Column="0" Content="xD" Style="{StaticResource weekLabelStyle}"/>

        <!-- Right Panel -->
        <Label Grid.Row="1" Grid.Column="8" Content="xD" Style="{StaticResource weekLabelStyle}"/>
        <Label Grid.Row="2" Grid.Column="8" Content="xD" Style="{StaticResource weekLabelStyle}"/>
        <Label Grid.Row="3" Grid.Column="8" Content="xD" Style="{StaticResource weekLabelStyle}"/>
        <Label Grid.Row="4" Grid.Column="8" Content="xD" Style="{StaticResource weekLabelStyle}"/>

